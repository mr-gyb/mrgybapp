rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow reading any user for group chat invites, but only write own data
    match /users/{userId} {
      // Allow reading any user (for search/invite purposes in group chats)
      allow read: if request.auth != null;
      
      // Users can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile (including friend request arrays)
      // Also allow updating recipient's pendingRequests when sending friend request
      allow update: if request.auth != null && 
        (request.auth.uid == userId ||
         // Allow sender to update receiver's pendingRequests array
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pendingRequests', 'notifications', 'updatedAt'])));
      
      // Users can delete their own profile
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    function isChatParticipant(chatId) {
      let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
      return chatDoc.exists() &&
        (
          (chatDoc.data.participantIds != null && chatDoc.data.participantIds.hasAny([request.auth.uid])) ||
          chatDoc.data.userId == request.auth.uid
        );
    }

    // Chat rooms - members can read/write (legacy)
    match /chatRooms/{chatRoomId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
    }
    
    // Messages - users can read/write messages in rooms they're members of (legacy support)
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (
          (resource.data.roomId != null &&
            request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(resource.data.roomId)).data.members)
          ||
          (resource.data.chatId != null && isChatParticipant(resource.data.chatId))
        );
    }

    // New chats collection - participants can read/update
    match /chats/{chatId} {
      allow read, update: if request.auth != null && isChatParticipant(chatId);
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.createdBy;
    }
    
    // Existing team chat rules (keep existing functionality)
    match /dream_team_chat/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.teamMembers;
    }
    
    match /dream_team_chat/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in get(/databases/$(database)/documents/dream_team_chat/$(chatId)).data.teamMembers;
    }
    
    // Chat invitations
    match /chat_invitations/{invitationId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.invitedBy || request.auth.uid == resource.data.invitedUser);
    }
    
    // Group Chats - Helper function to check if user is a participant
    function isGroupChatParticipant(groupId) {
      let groupDoc = get(/databases/$(database)/documents/group_chats/$(groupId));
      if (!groupDoc.exists()) return false;
      // Check if user created the group
      if (request.auth.uid == groupDoc.data.createdBy) return true;
      // Check participantIds array (string array)
      let participantIds = groupDoc.data.participantIds;
      if (participantIds != null && participantIds.hasAny([request.auth.uid])) {
        return true;
      }
      // Fallback: check participants array (object array)
      let participants = groupDoc.data.participants;
      return participants != null && participants.hasAny([{ id: request.auth.uid }]);
    }
    
    match /group_chats/{groupId} {
      allow read: if request.auth != null && isGroupChatParticipant(groupId);
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.createdBy;
      allow update: if request.auth != null && isGroupChatParticipant(groupId);
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
    }
    
    match /group_messages/{messageId} {
      allow read: if request.auth != null && 
        isGroupChatParticipant(resource.data.groupId);
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.senderId || 
         request.resource.data.senderType == 'ai') && // Allow AI agents to send messages
        isGroupChatParticipant(request.resource.data.groupId);
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.senderId;
    }
    
    // User profiles
    match /profiles/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == profileId;
    }
    
    // Friend requests - users can create requests and read their own
    match /friendRequests/{requestId} {
      // Users can create friend requests
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.fromUid;
      
      // Users can read requests they sent or received
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.fromUid || 
         request.auth.uid == resource.data.toUid);
      
      // Users can update requests they received (to accept/decline)
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.toUid &&
        request.resource.data.status in ['accepted', 'declined'];
      
      // Users can delete requests they sent or received
      allow delete: if request.auth != null && 
        (request.auth.uid == resource.data.fromUid || 
         request.auth.uid == resource.data.toUid);
    }
    
    // Posts collection - for community posts
    match /posts/{postId} {
      function viewerIsFriend() {
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        return userDoc.exists() &&
          userDoc.data.friends != null &&
          userDoc.data.friends.hasAny([resource.data.authorId]);
      }

      function postAudience() {
        return (resource.data.audience != null ? resource.data.audience : (resource.data.visibility != null ? resource.data.visibility : 'anyone'));
      }

      // Anyone authenticated can read posts if allowed by the audience rules
      allow read: if request.auth != null &&
        (
          postAudience() == 'anyone' ||
          resource.data.authorId == request.auth.uid ||
          (postAudience() == 'friends' && viewerIsFriend())
        );
      
      // Users can create their own posts
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.authorId &&
        request.resource.data.audience in ['anyone', 'friends'];
      
      // Users can update their own posts (like, comment count)
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.authorId ||
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'likedBy', 'commentsCount'])) &&
        (request.resource.data.audience == null || request.resource.data.audience in ['anyone', 'friends']);
      
      // Users can delete their own posts
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId;
      
      // Comments subcollection
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if request.auth != null;
        
        // Users can create comments
        allow create: if request.auth != null && 
          request.auth.uid == request.resource.data.authorId;
        
        // Users can delete their own comments
        allow delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
    }
    
    // TODO: For production, add more restrictive rules:
    // - Rate limiting for friend requests
    // - Validate notification structure
    // - Prevent users from modifying other users' data beyond friend requests
    // - Add audit logging for sensitive operations
  }
}